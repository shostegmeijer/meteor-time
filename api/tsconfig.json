{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "target": "esnext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "removeComments": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src/*.ts", "src/**/*.ts", "src/**/*.json"],
    "references": [{ "path": "../shared" }]
}
